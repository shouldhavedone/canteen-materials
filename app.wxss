/**app.wxss**/
@import './font/font.wxss';

view, image, button, text, input, form, scroll-view, textarea {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

text, view {
  word-break: break-all;
}

button, button:active {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: rgba(72, 143, 247, 1);
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.container {
  width: 100%;
  background: #f0f3f6;
  /* padding: 0 16rpx; */
  /* background: rgba(239, 244, 248, 1); */
}

.line-hidden {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.page {
  height: 100%;
}

button::after {
  border: none;
}

.fl-s {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.fl-c {
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-top {
  position: fixed;
  right: 24rpx;
  bottom: 72rpx;
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  box-shadow: 0px 4rpx 16rpx 0px rgba(184, 184, 184, 0.4);
}

.form-input {
  font-size: 28rpx;
}

.input-field {
  flex: 1;
}

.page-container {
  height: 100%;
  padding: 8rpx 20rpx;
  background-color: #fff;
}

.page-header-search {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 108rpx;
  padding: 18rpx 32rpx;
  background: rgba(72, 143, 247, 1);
}

.page-header-wrap {
  height: 64rpx;
  background: rgba(254, 254, 254, 1);
  box-shadow: 0px 2rpx 16px 0px rgba(15, 132, 210, 0.12);
  border-radius: 44rpx;
}

.page-header-wrap-defautWidth {
  width: 686rpx;
}

.page-header-wrap-changeWidth {
  width: 574rpx;
}

.page-header-search-icon {
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  margin: 18rpx 16rpx 18rpx 32rpx;
}

.page-header-input {
  position: absolute;
  top: 18rpx;
  left: 116rpx;
  display: inline-block;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 32rpx;
  color: rgba(51, 51, 51, 1);
  /* background: red; */
}

.page-header-defautWidth {
  width: 450rpx;
}

.page-header-changeWidth {
  width: 420rpx;
}

.page-header-input-placeholder {
  font-size: 28rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 64rpx;
}

.page-header-line {
  position: absolute;
  top: 18rpx;
  right: 182rpx;
  display: inline-block;
  width: 2rpx;
  height: 36rpx;
  margin: 16rpx 0 12rpx 0;
  background: rgba(216, 216, 216, 1);
}

.page-header-add {
  position: absolute;
  top: 18rpx;
  right: 80rpx;
  width: 100rpx;
  height: 64rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.page-header-add-icon {
  width: 40rpx;
  height: 40rpx;
}

.page-header-del-icon-wrap {
  position: absolute;
  top: 18rpx;
  right: 144rpx;
  width: 68rpx;
  height: 64rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.page-header-del-icon {
  width: 36rpx;
  height: 36rpx;
}

.page-header-cancel-wrap {
  position: absolute;
  top: 18rpx;
  right: 48rpx;
  width: 80rpx;
  height: 64rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.page-header-cancel-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 1);
  line-height: 36rpx;
}

.content-wrap {
  margin-top: 114rpx;
}

.phone-box {
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 96rpx;
  padding: 0 0 0 32rpx;
  background: rgba(254, 254, 254, 1);
}

.phone-img {
  width: 16rpx;
  height: 16rpx;
  margin-right: 12rpx;
}

.phone-tip {
  font-size: 28rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 40rpx;
}

.label-text {
  width: 170rpx;
  font-size: 28rpx;
}

.phone-input {
  width: 500rpx;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.delete-box {
  width: 104rpx;
  height: 120rpx;
  padding-top: 40rpx;
}

.icon-delete {
  display: block;
  width: 36rpx;
  height: 36rpx;
  margin: 0 auto;
}
/* pages/departmentSetup/departmentSetup.wxss */
.container {
  height: 100%;
  padding: 8rpx 20rpx;
  background-color: #fff;
}

.header-wrap {
  width: 100%;
  height: 100rpx;
  border-radius: 20rpx;
  border: 2rpx solid #ccc;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 24rpx;
}

.add-depart {
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  margin-right: 24rpx;
}

.depart-item {
  height: 300rpx;
  width: 100%;
  border: 2rpx solid #ccc;
  border-radius: 28rpx;
  margin-top: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  box-shadow: 2rpx 2rpx 6rpx 2rpx #ccc;
}

.item-wrap {
  height: 160rpx;
}
<!--pages/departmentSetup/departmentSetup.wxml-->
<view class="container">
  <view class="header-wrap">
    <van-field value="{{ departName }}" clearable placeholder="请输入部门名称" border="{{ false }}" bind:change="searchName" bind:clear="clearSearchName"/>
    <view class="search-btn" catchtap="getDepartmentData">
      <van-icon name="search" />搜索</view>
    <view class="add-depart" bindtap="showPopup">
      <van-icon name="plus" />添加部门</view>
  </view>
  <view class="content-wrap">
    <view class="depart-item" wx:for="{{lists}}" wx:key="index" data-item="{{item}}">
      <view class="item-wrap">
        <view class="item-left">
          <view>部门：{{item.name}}</view>
          <view>排序：{{item.sort}}</view>
        </view>
        <view class="item-right">
          <van-switch checked="{{ item.state ? true : false }}" size="48rpx" />
        </view>
      </view>
      <view class="item-btn">
        <view bindtap="toDetail" data-id="{{ item.id }}">编辑</view>
        <view class="del-btn" data-id="{{ item.id }}" bindtap="deleteDepart">删除</view>
      </view>
    </view>
  </view>
</view>
<loading wx:if="{{$state.isShowLoading}}" iconType="{{$state.loadingIcon}}" content='{{$state.loadingText}}'></loading>
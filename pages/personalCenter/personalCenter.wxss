/* pages/personalCenter/personalCenter.wxss */

page, .mine {
  position: relative;
  width: 100%;
  height: calc(100%-370rpx);
  height: auto;
  background: #f5f5f5;
}

/* 头部 */

.header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 370rpx;
  overflow: hidden;
  z-index: 3;
  background-color: #488FF7;
}

.bg {
  width: 100%;
  height: 100%;
}

.head-pic {
  position: absolute;
  top: 50rpx;
  left: 296rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.user-name, .tip {
  position: absolute;
  top: 234rpx;
  left:5%;
  width: 90%;
  margin: 0 auto;
  text-align: center;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 1);
}
.user-name view,.editeUserName{
  display: inline-block;
  vertical-align: middle;
}
.user-name view{
  max-width: 94%;
}
.editeUserName{
  width: 28rpx;
  height: 28rpx;
  margin-left: 10rpx;
}
.tip {
  top: 280rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  /* height:32px;
  line-height: 32rpx; */
}
.down{
  top: 242rpx;
}
/* 未登录 */

.version-tip {
  margin-top: 370rpx;
  padding-top: 30rpx;
  text-align: center;
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 28rpx;
}

.version-bg {
  display: block;
  width: 690rpx;
  margin: 416rpx auto 0 auto;
  height: 362rpx;
}

/* 已登录 */

.has-logIn {
  margin: 370rpx auto 0 auto;
}

.phones {
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 116rpx;
  padding-left: 32rpx;
  background: rgba(254, 254, 254, 1);
}

.phone-img {
  width: 32rpx;
  height: 32rpx;
}
.policy-img{
  width: 36rpx;
  height: 36rpx;
}
.phone {
  margin-left: 28rpx;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}
.line {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1px;
  background: #f5f5f5;
}

.delete-box {
  position: absolute;
  top: 0;
  right: 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 100rpx;
  height: 100%;
  padding-right: 32rpx;
}

.delete {
  width: 32rpx;
  height: 32rpx;
}

.add-tip {
  height: 34rpx;
  line-height: 34rpx;
  margin-top: 96rpx;
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
  text-align: center;
}

.add-box {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 600rpx;
  height: 88rpx;
  margin: 16rpx auto 0 auto;
  background: rgba(245, 245, 245, 1);
  border-radius: 4px;
  border: 2px solid rgba(72, 143, 247, 1);
}

.add-img {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  padding-top: 5rpx;
}

.add-btn {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(72, 143, 247, 1);
}

.bg-bottom {
  display: block;
  width: 690rpx;
  height: 310rpx;
  margin: 176rpx auto 0 auto;
}

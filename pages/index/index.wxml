<!--index.wxml-->
<view class="container">
  <van-notice-bar left-icon="volume-o" background="#fff" mode="link" bindtap="toNoticeList" text="在代码阅读过程中人们说脏话的频率是衡量代码质量的唯一标准。" />
  <view wx:if="{{userId}}" class="easyfun-wrap">
    <view class="model-title">人员管理</view>
    <view class="model-list">
      <view class="model-item" catchtap="toDeptSetup">
        <image src="../../images/model.png"></image>
        <view>部门设置</view>
      </view>
      <view class="model-item" catchtap="toUPostSetup">
        <image src="../../images/model.png"></image>
        <view>职位设置</view>
      </view>
      <view class="model-item" catchtap="toUserMag">
        <image src="../../images/model.png"></image>
        <view>人员管理</view>
      </view>
      <view class="model-item">
        <image src="../../images/model.png"></image>
        <view>关于我们</view>
      </view>
    </view>
  </view>
  <view wx:if="{{userId}}" class="easyfun-wrap">
    <view class="model-title">供应管理</view>
    <view class="model-list">
      <view class="model-item" catchtap="toSupplier">
        <image src="../../images/model.png"></image>
        <view>供应商管理</view>
      </view>
      <view class="model-item" catchtap="toMaterial">
        <image src="../../images/model.png"></image>
        <view>物资管理</view>
      </view>
      <view class="model-item" catchtap="toFoodType">
        <image src="../../images/model.png"></image>
        <view>菜类管理</view>
      </view>
      <view class="model-item" catchtap="toFoodRank">
        <image src="../../images/model.png"></image>
        <view>菜品库</view>
      </view>
    </view>
  </view>
  <view wx:if="{{userId}}" class="funmodel-wrap">
    <view class="model-title">用餐管理</view>
    <view class="model-list">
      <!-- <view class="model-item" catchtap="toMealOpenTime">
        <image src="../../images/model.png"></image>
        <view>开餐日期</view>
      </view> -->
      <view class="model-item" catchtap="toDinnerTime">
        <image src="../../images/model.png"></image>
        <view>用餐时段</view>
      </view>
      
      <view class="model-item" catchtap="toDailyMenu">
        <image src="../../images/model.png"></image>
        <view>每日菜谱</view>
      </view>
    </view>
  </view>

  <view class="no-logIn" wx:if="{{!userId}}">
    <image class="no-log-img" src="../../images/asd@2x.png"></image>
    <view class="log-tip fl-s" catchtap="toLogIn">
      <text>你还未登录，请</text>
      <text class="log-blue">登录</text>
      <text>后查看相关动态</text>
    </view>
  </view>
</view>
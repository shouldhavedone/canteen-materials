page, .code-logIn {
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 1);
}

.code-logIn {
  padding: 96rpx 64rpx;
}

.tip {
  width: 120rpx;
  font-size: 56rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(32, 32, 32, 1);
  line-height: 80rpx;
  text-align: center;
}

.bg-tip {
  margin-top: -15rpx;
  width: 120rpx;
  height: 16rpx;
  background: rgba(38, 82, 254, .5);
}

input {
  height: 108rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(32, 32, 32, 1);
  line-height: 108rpx;
}

.name-input {
  margin-top: 52rpx;
  border-bottom: 2rpx solid #ccd5ea;
}

.pwd-input {
  border-bottom: 2rpx solid #ccd5ea;
}

.password-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 108rpx;
  border-bottom: 2rpx solid #ccd5ea;
}

.password-input {
  width: 60%;
  /* background: red; */
}

.code-tip {
  width: 168rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 24rpx;
  border: 2rpx solid rgba(38, 82, 254, 1);
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(38, 82, 254, 1);
  line-height: 48rpx;
  text-align: center;
}

.btn {
  width: 622rpx;
  height: 80rpx;
  background: rgba(38, 82, 254, 0.7);
  text-align: center;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 80rpx;
  margin-top: 80rpx;
  border-radius: 44rpx;
}

.err-tip {
  margin-top: 62rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.err-tip image {
  display: block;
  width: 28rpx;
  height: 28rpx;
  margin-right: 16rpx;
}

.err-tip view {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 61, 109, 1);
  line-height: 34rpx;
}

.btn-gap {
  margin-top: 32rpx;
}

.light-color {
  color: rgba(38, 82, 254, 0.5);
}

.light-border {
  border: 2rpx solid rgba(38, 82, 254, 0.5);
}

.deepBlue {
  background: rgba(38, 82, 254, 1) !important;
}

.place-style {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(128, 128, 128, 1);
  line-height: 44rpx;
}

.regbtn {
  text-align: center;
  margin-top: 36rpx;
  cursor: pointer;
  font-size: 28rpx;
}

.phone-box {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 96rpx;
  background: rgba(254, 254, 254, 1);
  border-bottom: 2rpx solid #ccd5ea;
  padding: 0;
}

.placeholder {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(128, 128, 128, 1);
}

.arrow-icon {
  width: 26rpx;
  height: 20rpx;
}
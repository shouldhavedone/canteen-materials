.container {
  height: 100vh;
  width: 100%;
  background: rgba(239, 244, 248, 1);
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.header-wrap {
  height: 120rpx;
  background-color: #fff;
  padding: 0 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 26rpx;
  color: #999;
}

.title {
  font-weight: 600;
  margin-bottom: 10rpx;
  color: #000;
}

.content-wrap {
  flex: 1;
  width: 100%;
  margin-top: 20rpx;
}

.content-wrap .image {
  height: 100%;
  width: 100%;
}